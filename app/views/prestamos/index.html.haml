%h1 Listado de Prestamos

%table#prestamos.table.table-stripped
  %thead
    %tr
      %th Título del libro
      %th Lector 
      %th
      %th
      %th

  %tbody
    - @prestamos.each do |prestamo|
      %tr
        %td= prestamo.libro.titulo

        %td= prestamo.lector.nombre_completo
        %td
          .btn-group
            = link_to 'Mostrar', prestamo, class: 'btn' 
            = link_to 'Editar', edit_prestamo_path(prestamo), class: 'btn'
            = link_to 'Eliminar', prestamo, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger'

.form-actions
  = link_to "Nuevo Prestamo", new_prestamo_path, class: 'btn btn-primary'
